
<table class="stocktable" >
<tr>
  <td class="stocktable" width="100"><h2>Name:</h2></td>
  <td class="stocktable"><%=  @stock.name    %></td>
</tr>
<tr>
  <td class="stocktable" width="150"><h2>Symbol:</h2></td>
  <td class="stocktable" ><%= @stock.symbol.upcase  %></td>
</tr>
<tr>
  <td class="stocktable" width="100"><h2>Price:</h2></td>
  <td class="stocktable" ><%= @stock.price   %></td>
</tr>
<tr>
  <td class="stocktable" width="100"><h2>PE:  </h2></td>
  <td class="stocktable"><%= @stock.pe      %></td>
</tr>
<tr>
  <td class="stocktable" width="150"><h2>Div. Yield:  </h2></td>
  <td class="stocktable" ><%= @stock.div     %></td>
</tr>
<tr>
  <td class="stocktable" width="200"><h2>Guess Growth:  </h2></td>
  <td class="stocktable" ><%= @stock.guess_growth    %></td>
</tr>
<tr>
  <td class="stocktable" width="250"><h2>Ten Year Growth:  </h2></td>
  <td class="stocktable" ><%= @stock.ten_year_growth    %></td>
</tr>
</table> 
</br>
<table class="stocktable">
  <tr>
    <td class="stocktable"><%= link_to "| Edit Stock |", edit_stock_path(@stock), :method => "get" %></td> 
    <td class="stocktable"><%= link_to "| Delete Stock |",stock_path(@stock),
                               :method => :delete,
                               :confirm => "Hey Buddy!  Are you sure you want to delete this stock?"%></td> 
    </tr>
    <tr>
    <td class="stocktable"><%= link_to "| Add Earnings |", new_stock_earning_path(@stock)  %>  </td> 
  
  
    <td class="stocktable"><%= link_to "| Edit Earnings |",edit_stock_earning_path(@stock)%>   </td>
    </tr> 
    <tr>
    <td class="stocktable"><%= link_to "| Home |", stocks_path, :method => "get" %> </td> 
    <td class="stocktable"><%= link_to "| Projected Earnings |", stock_projected_earning_path(@stock) %> </td> 
    </tr>
    <tr>
    <td class="stocktable"><%= link_to "| Discount Cash Flows |", stock_discount_cash_flow_path(@stock) %> </td> 
  </tr>
</table>

</br>
</br>
<%= form_for @stock do |f| %> 
 <%= f.error_messages %>

 <h2>Earnings</h2>

<table>
<tr><td><b>Year</td><td><b>Earnings</td><td><b>PE</td><td><b>Div.</td><td><b>SH EQ</td></tr>

  <%= f.fields_for :earnings do |earning_fields| %>
  <tr>
  <td>
    <%= earning_fields.text_field :year,  :size => 5 %>
  </td>
  <td>
    <%= earning_fields.text_field :earnings,  :size => 5 %>
  </td> 
  <td>
    <%= earning_fields.text_field :pe, :size => 5 %>
  </td>
  <td>
    <%= earning_fields.text_field :div, :size => 5 %>
  </td>
  <td>
   <%= earning_fields.text_field :sheq, :size => 5 %>
  </td>
</tr>
<% end %>
</table>
 </p>
  <% end %>

